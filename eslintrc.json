{
  "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "node": true
  },
  "settings": {
    "react": {
      "version": "^17.0.2"
    }
  },
  "extends": [
      "eslint:recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "babelOptions": {
        "presets": ["@babel/preset-react"]
     },
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "react", "react-hooks", "jsx-a11y"
  ]
}
